r\n  <div class=\"recommendBox\" v-if=\"hotData.length>0\">\r\n    <h3>热门歌曲推荐</h3>\r\n    <ul class=\"list\">\r\n      <li class=\"item\" v-for=\"item in hotData\" :key=\"item.id\">\r\n        <router-link :to=\"{path:`/playsong/${item.id}`}\">\r\n          <div class=\"pic\">\r\n            <img :src=\"item.pic\" alt />\r\n          </div>\r\n          <p v-text=\"item.title+'  ( '+item.author+' ) '\"></p>\r\n        </router-link>\r\n      </li>\r\n    </ul>\r\n  </div>\r\n</template>\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      hotData: []\r\n    };\r\n  },\r\n  created() {\r\n    this.init();\r\n  },\r\n  watch: {\r\n    $route() {\r\n      this.init();\r\n    }\r\n  },\r\n  methods: {\r\n    async init() {\r\n      let hotData = localStorage.getItem(\"hotData\");\r\n      if (hotData) {\r\n        hotData = JSON.parse(hotData);\r\n        if (new Date().getTime() - hotData.time < 30 * 60 * 1000) {\r\n          this.hotData = hotData.data;\r\n          return;\r\n        }\r\n      }\r\n      let result = await this.$api.hotList();\r\n      if (parseInt(result.code) === 0) {\r\n        this.hotData = result.data;\r\n        localStorage.setItem(\r\n          \"hotData\",\r\n          JSON.stringify({\r\n            time: new Date().getTime(),\r\n            data: result.data\r\n          })\r\n        );\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n<style lang=\"less\">\r\n.recommendBox {\r\n  margin-top: 0.4rem;\r\n  padding: 0 0.3rem;\r\n\r\n  h3 {\r\n    height: 1rem;\r\n    line-height: 1rem;\r\n    text-align: center;\r\n    font-size: 0.32rem;\r\n    font-weight: normal;\r\n  }\r\n\r\n  .list {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n\r\n    .item {\r\n      width: 32%;\r\n      overflow: hidden;\r\n      display: flex;\r\n      // justify-content: ;\r\n\r\n      a {\r\n        display: block;\r\n        .pic {\r\n          height: 1.5rem;\r\n          width: 1.5rem;\r\n          background: #ddd;\r\n\r\n          img {\r\n            display: block;\r\n            width: 100%;\r\n            height: 100%;\r\n          }\r\n        }\r\n\r\n        p {\r\n          height: 0.8rem;\r\n          line-height: 0.4rem;\r\n          font-size: 0.2rem;\r\n          color: grey;\r\n          overflow: hidden;\r\n        }\r\n      }\r\n    }\r\n  }\r\n}\r\n</style>"]}]}